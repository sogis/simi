<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://therm.caption.edit"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.product.therm">
    <data>
        <instance id="thermGroupDc"
                  class="ch.so.agi.simi.entity.product.ThermGroup"
                  view="thermGroup-edit">
            <loader/>
        </instance>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="thermGroupDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textArea id="synonymsField" property="synonyms" rows="5"/>
                <hbox>
                    <button id="synonyms2JsonBtn" caption="Als Json-Array formatieren" stylename="friendly"/>
                </hbox>
            </column>
            <column width="350px">
                <label id="spacer"/>
                <textArea id="keywordsField" property="keywords" rows="5"/>
                <hbox>
                    <button id="keywords2JsonBtn" caption="Als Json-Array formatieren" stylename="friendly"/>
                </hbox>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
