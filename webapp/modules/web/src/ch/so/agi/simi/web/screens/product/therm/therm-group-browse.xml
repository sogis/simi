<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="mainMsg://therm.caption.browse"
        focusComponent="thermGroupsTable">
    <data readOnly="true">
        <collection id="thermGroupsDc"
                    class="ch.so.agi.simi.entity.product.ThermGroup"
                    view="thermGroup-browse">
            <loader id="thermGroupsDl">
                <query>
                    <![CDATA[select e from simiProduct_ThermGroup e]]>
                    <condition>
                        <c:jpql>
                            <c:where>lower(e.name) like :term</c:where>
                        </c:jpql>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="thermGroupsTable"
            spacing="true">
        <table id="thermGroupsTable"
            width="100%"
            dataContainer="thermGroupsDc"
            multiselect="true"
            settingsEnabled="false">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove">
                    <properties>
                        <property name="confirmation" value="false"/>
                    </properties>
                </action>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="thermGroupsTable.create" stylename="primary"/>
                <button id="editBtn" action="thermGroupsTable.edit" stylename="primary"/>
                <button id="removeBtn" action="thermGroupsTable.remove" stylename="danger"/>
            </buttonsPanel>
        </table>
        <fragment screen="simi_FilterFragment">
            <properties>
                <property name="dataLoader" ref="thermGroupsDl"/>
                <property name="inputPrompt" value="Filtern nach Name (= Kennung)"/>
            </properties>
        </fragment>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
