<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://dependency_VMBrowse.caption"
        focusComponent="dependency_VMsTable"
        messagesPack="ch.so.agi.simi.web.screens.dependency_vm">
    <data readOnly="true">
        <collection id="dependency_VMsDc"
                    class="ch.so.agi.simi.web.screens.dependency_vm.Dependency_VM">
            <view extends="_local">
                <property name="display"/>
                <property name="identifier"/>
                <property name="entityIdent"/>
                <property name="entityId"/>
                <property name="relationDescription"/>
            </view>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dependency_VMsTable"
            spacing="true">
        <label value="Hier kommt die Auswahl der Tabelle hin..."/>
        <treeTable id="dependency_VMsTable"
                   width="100%"
                   dataContainer="dependency_VMsDc"
                   hierarchyProperty="parent">
            <actions>
                <action id="edit" type="edit"/>
                <action id="excel" caption="Als Excel exportieren" icon="icons/excel.png" type="excel">
                    <properties>
                        <property name="fileName" value="abhaengigkeiten_mock"/>
                        <property name="exportAggregation" value="false"/>
                    </properties>
                </action>
            </actions>
            <columns>
                <column id="display"/>
                <column id="parentDisplay" caption="AbhÃ¤ngigkeit"/>
                <column id="relationDescription" caption="Details"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="editBtn" action="dependency_VMsTable.edit"/>
                <button id="excelBtn" action="dependency_VMsTable.excel"/>
            </buttonsPanel>
        </treeTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
