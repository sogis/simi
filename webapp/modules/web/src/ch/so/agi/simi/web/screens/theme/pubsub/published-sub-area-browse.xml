<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://publishedSubArea.caption.browse"
        focusComponent="publishedSubAreasTable">
    <data readOnly="true">
        <collection id="publishedSubAreasDc"
                    class="ch.so.agi.simi.entity.theme.subarea.PublishedSubArea"
        view="publishedSubArea-browse">
            <loader id="publishedSubAreasDl">
                <query>
                    <![CDATA[select e from simiTheme_PublishedSubArea e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="publishedSubAreasTable"
            spacing="true">
        <table id="publishedSubAreasTable"
               width="100%"
               dataContainer="publishedSubAreasDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="themePublication"/>
                <column id="subArea"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="publishedSubAreasTable.create"/>
                <button id="editBtn" action="publishedSubAreasTable.edit" stylename="friendly"/>
                <button id="removeBtn" action="publishedSubAreasTable.remove" stylename="danger"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
