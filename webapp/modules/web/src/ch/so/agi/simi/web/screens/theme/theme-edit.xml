<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://theme.caption.edit"
        focusComponent="form">
    <data>
        <instance id="themeDc"
                  class="ch.so.agi.simi.entity.theme.Theme"
                  view="theme-edit">
            <collection id="themePubDc" property="themePublications"/>
            <loader/>
        </instance>
        <collection id="dataOwnersDc" class="ch.so.agi.simi.entity.theme.org.OrgUnit" view="theme-edit-dataOwners">
            <loader id="dataOwnersDl">
                <query>
                    <![CDATA[select e from simiTheme_OrgUnit e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="80%"
                width="80%"
                modal="true"
                forceDialog="true"
                resizable="true"/>
    <layout expand="themePubBox" spacing="true">
        <form id="form" dataContainer="themeDc">
            <column width="350px">
                <textField id="identifierField" property="identifier"/>
                <lookupPickerField id="dataOwnerField" optionsContainer="dataOwnersDc" property="dataOwner">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" type="picker_open"/>
                    </actions>
                </lookupPickerField>
                <textField id="titleField" property="title"/>
            </column>
            <column width="350px">
                <textArea id="descriptionField" property="description" rows="4" rowspan="3"/>
                <textArea id="remarksField" property="remarks" rows="2" rowspan="2"/>
            </column>
        </form>
        <groupBox id="themePubBox" caption="mainMsg://themePublication.caption.browse"
                  expand="themePubTable">
            <table id="themePubTable"
                   dataContainer="themePubDc"
                   width="100%"
                   height="100%"
                   multiselect="true"
                   editable="false"
                   settingsEnabled="false">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove">
                        <properties>
                            <property name="confirmation" value="false"/>
                        </properties>
                    </action>
                </actions>
                <columns>
                    <column id="derivedIdent" caption="Result. Identifier"/>
                </columns>
                <buttonsPanel>
                    <button action="themePubTable.create" stylename="primary"/>
                    <button action="themePubTable.edit" stylename="primary"/>
                    <button action="themePubTable.remove" stylename="danger"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>