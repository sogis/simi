<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://dataSetViewBrowse.caption"
        focusComponent="dataSetViewsTable"
        messagesPack="ch.so.agi.simi.web.screens.product.datasetview">
    <data readOnly="true">
        <collection id="dataSetViewsDc"
                    class="ch.so.agi.simi.entity.product.DataSetView">
            <view extends="_local">
                <property name="pubScope" view="_minimal"/>
            </view>
            <loader id="dataSetViewsDl">
                <query>
                    <![CDATA[select e from simiProduct_DataSetView e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"
                resizable="true"/>
    <layout expand="dataSetViewsTable"
            spacing="true">
        <table id="dataSetViewsTable"
               width="100%"
               dataContainer="dataSetViewsDc"
               multiselect="true">
            <actions>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="identifier"/>
                <column id="title"/>
                <column id="pubScope"/>
                <column id="releasedAt"/>
            </columns>
            <rowsCount/>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
