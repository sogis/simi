<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="mainMsg://group.caption.browse"
        focusComponent="groupsTable">
    <data readOnly="true">
        <collection id="groupsDc"
                    class="ch.so.agi.simi.entity.iam.Group" view="group_browse">
            <loader id="groupsDl">
                <query>
                    <![CDATA[select e from simiIAM_Group e]]>
                    <condition>
                        <or>
                            <c:jpql>
                                <c:where>e.identifier like :term</c:where>
                            </c:jpql>
                        </or>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="groupsTable"
            spacing="true">
        <table id="groupsTable"
               width="100%"
               multiselect="true"
               dataContainer="groupsDc"
               settingsEnabled="false">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="identifier"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="groupsTable.create" stylename="primary"/>
                <button id="editBtn" action="groupsTable.edit" stylename="primary"/>
                <button id="removeBtn" action="groupsTable.remove" stylename="danger"/>
            </buttonsPanel>
        </table>
        <fragment screen="simi_FilterFragment">
            <properties>
                <property name="dataLoader" ref="groupsDl"/>
                <property name="inputPrompt" value="Filtern nach Kennung"/>
            </properties>
        </fragment>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
