<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://roleBrowse.caption"
        focusComponent="rolesTable"
        messagesPack="ch.so.agi.simi.web.screens.iam.role">
    <data readOnly="true">
        <collection id="rolesDc"
                    class="ch.so.agi.simi.entity.iam.Role">
            <view extends="_local">
            </view>
            <loader id="rolesDl">
                <query>
                    <![CDATA[select e from simi_Role e]]>
                    <condition>
                        <or>
                            <c:jpql>
                                <c:where>e.name like :term</c:where>
                            </c:jpql>
                        </or>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="rolesTable"
            spacing="true">
        <table id="rolesTable"
               width="100%"
               multiselect="true"
               dataContainer="rolesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="rolesTable.create"/>
                <button id="editBtn" action="rolesTable.edit"/>
                <button id="removeBtn" action="rolesTable.remove" stylename="danger"/>
            </buttonsPanel>
        </table>
        <fragment screen="simi_FilterFragment">
            <properties>
                <property name="dataLoader" ref="rolesDl"/>
                <property name="inputPrompt" value="Filtern nach Name"/>
            </properties>
        </fragment>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
